<div class="text-center pt-4">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-md-8 offset-md-2 col-sm-10 offset-sm-1">
    
    <%= form_tag("/login") do %>
    <div class="form-group">
    <p>メールアドレス</p>
    <input name="email" value="<%= @email %>" class="form-control"></input>
    </div>
    <div class="form-group">
    <p>パスワード</p>
    <input type="password" name="password" value="<%= @password %>" class="form-control"></input>
    </div>
    
   
    
  </div>
  <div class="col-8 offset-2">
  <input type="submit" value="ログインする" class="buttom btn btn-block mt-5"></input>
  </div>
  <% end %>
</div>