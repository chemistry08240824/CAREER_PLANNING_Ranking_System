<div class="text-center pt-4">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-6 offset-3">
    
    <%= form_tag("/login") do %>
    <div class="form-group">
    <p>メールアドレス</p>
    <input name="email" value="<%= @email %>" class="form-control"></input>
    </div>
    <div class="form-group">
    <p>パスワード</p>
    <input type="password" name="password" value="<%= @password %>" class="form-control"></input>
    </div>
    
    <input type="submit" value="ログインする" class="form-control btn btn-info btn-block mt-5"></input>
   <% end %>
    
  </div>
</div>