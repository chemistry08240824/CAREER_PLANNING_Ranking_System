<div class="users-ranking mb-5">
  <div class="container mb-5">
    <div class="form-heading text-center mb-4 pt-4"><h2>売上ランキング</h2></div> 
    <table class="table">
      <tr>
        <th class="m-0 p-0 text-center">順位</th>
        <th class="m-0 p-0 text-center">名前</th>
        <th class="m-0 p-0 text-center">売上</th>
        <th class="m-0 p-0 text-center">団体</th>
      </tr>
      <% @users.each.with_index do |user,index| %>
      <tr class="m-0 p-0">
        <td class="m-0 text-center"><%= index+1 %>位</td>
        <td class="m-0 text-center"><%= link_to user.name,user ,class: "index_url"%></td>
        <td class="m-0 text-center">¥<%= user.money %></td>
        <td class="m-0 text-center"><%= user.group %></td>
      </tr>
        <% end %>
    </table>
   </div>
</div>

