<div class="users-ranking mb-5 text-center">
  <div class="container mb-5">
    <div class="form-heading mb-4 pt-4"><h2>売上ランキング</h2></div> 
    <table class="table text-left">
      <tr>
        <th class="text-left m-0 pl-1">順位</th>
        <th class="text-nowrap m-0 pl-1">名前</th>
        <th class="text-nowrap m-0 pl-1">売上</th>
        <th class="text-nowrap m-0">団体</th>
      </tr>
      <% @users.each.with_index do |user,index| %>
      <tr>
        <td class="text-left m-0 pl-1"><%= index+1 %>位</td>
        <td class="text-nowrap m-0 pl-1"><%= link_to user.name,user ,class: "index_url"%></td>
        <td class="text-nowrap m-0 pl-1">¥<%= user.money %></td>
        <td class="text-nowrap m-0"><%= user.group %></td>
      </tr>
        <% end %>
    </table>
   </div>
</div>

