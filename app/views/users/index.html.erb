<div class="users-ranking mb-5">
  <div class="container mb-5">
    <div class="form-heading text-center mb-4 pt-4"><h2>売上ランキング</h2></div> 
    <table class="table text-centertext-center">
      <tr>
        <th class="text-nowrap m-0">順位</th>
        <th class="text-nowrap m-0">名前</th>
        <th class="text-nowrap m-0">売上</th>
        <th class="text-nowrap m-0">団体</th>
      </tr>
      <% @users.each.with_index do |user,index| %>
      <tr class="text-nowrap m-0">
        <td class="text-nowrap m-0"><%= index+1 %>位</td>
        <td class="text-nowrap m-0"><%= link_to user.name,user ,class: "index_url"%></td>
        <td class="text-nowrap m-0">¥<%= user.money %></td>
        <td class="text-nowrap m-0"><%= user.group %></td>
      </tr>
        <% end %>
    </table>
   </div>
</div>

