<div class="users-ranking mb-5">
  <div class="container mb-5">
    <div class="form-heading text-center mb-4 pt-4"><h2>売上ランキング</h2></div> 
    <table class="table">
      <tr>
        <th>順位</th>
        <th>名前</th>
        <th>売上</th>
        <th>団体</th>
      </tr>
      <% @users.each.with_index do |user,index| %>
      <tr class="m-0 p-0">
        <td><%= index+1 %>位</td>
        <td class="text-nowrap"><%= link_to user.name,user ,class: "index_url"%></td>
        <td class="text-nowrap">¥<%= user.money %></td>
        <td class="text-nowrap"><%= user.group %></td>
      </tr>
        <% end %>
    </table>
   </div>
</div>

